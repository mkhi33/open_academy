<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- open_academy.wizard form view -->
    <record id="wizard_view_form" model="ir.ui.view">
        <field name="name">open_academy.wizard.view.form</field>
        <field name="model">open_academy.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="session_id"/>
                        <field name="attendee_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <act_window 
        id="launch_session_wizard"
        name="Add Attendees"
        src_model="oepn_academy.session"
        res_model="oepn_academy.wizard"
        view_mode="form"
        target="new"
        key2="client_action_multi"
    />

</odoo>